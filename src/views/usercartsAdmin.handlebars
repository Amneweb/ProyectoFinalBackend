{{#each carritosObtenidos}}
  <ul class="principalCarts">

    
      <li>
        <ul class="secundariaCarts titulos">
          <li>ID carrito</li><li>{{this._id}}</li><li>Dueño</li><li></li><li><button class="borrarCarrito" id="{{this._id}}">❌</button></li>
          
        </ul></li>
