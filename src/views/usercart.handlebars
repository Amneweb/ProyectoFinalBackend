<section>

  <h1>Bienvenido a Windward Car &amp; Truck Battery Store</h1>
  <h2>Este es tu carrito de compras</h2>
  <h3>ID:
    {{carrito._id}}</h3><button
    class="borrarCarrito"
    id="{{carrito._id}}"
  >Borrar carrito ❌</button>
  <div class="contenedorCarrito">
    {{#each carrito.cart}}
      <div class="producto">
        <div class="producto_imagen">{{#if this.product.thumb}}
            <img
              src="{{this.product.thumb}}"
              alt="{{this.product.title}}"
            />{{/if}}
        </div>
        <div class="producto_nombre"><p>{{this.product.title}}</p></div>
        <div class="producto_cantidad"><p>{{this.qty}}</p></div>
        <div class="producto_borrar"><button
            id="{{this.product._id}}"
            class="borrar"
            name="{{../carrito._id}}"
          >🗑️</button></div>
      </div>
    {{/each}}
  </div>

</section>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/carts.js"></script>