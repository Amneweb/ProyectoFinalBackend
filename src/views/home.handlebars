<div>
    <h1>Hola, bienvenidos a Windward Car &amp; Truck - Batery Store</h1>
    <p><a  href="/admin">>> Admin panel</a></p>
  <h2>Listado de productos en stock</h2>
  <ul class="principal">
    <li>
      <ul class="interna encabezado">
        <li>Nombre producto</li><li>Precio</li><li>Descripci√≥n</li><li>SKU</li> <li>Stock</li><li>IMG</li>
      </ul>
    </li>
  
    {{#each productosObtenidos}}
    <li>
      <ul class="interna">
         
         <li><a href="../{{this._id}}">{{this.title}}</a></li> 
         <li> {{this.price}}</li>
         <li>{{this.description}} </li>
         <li>{{this.code}}</li>
          <li>{{this.stock}}</li>
          <li>{{#if this.thumb}} <img src="{{this.thumb}}" alt="{{this.title}}"    >{{/if}} </li>
      </ul>
    </li>
    {{/each}}
   

</ul>
</div>
<div>
  <h2>Agregar productos</h2>
     <form id="agregar" action="/api/products" enctype="multipart/form-data" method="post">
        <label for="title">Title</label>
        <input type="text" id="title" name="title" value="">
        <label for="price">Price</label>
        <input type="number" id="price" name="price" value="">
        <label for="category">Category</label>
        <input type="text" name="category" value="" id="category">
        <label for="code">Code</label>
        <input type="text" id="code" name="code" value="">
        <label for="description">Descripcion</label>
        <input type="text" id="description" value="" name="description">
        <label for="stock">Stock</label>
        <input type="number" id="stock" value="" name="stock">
        <label for="status">Status</label>
        <input type="text" value="true">
        <label for="thumb">Imagen principal</label>
        <input type="file" name="imagen" id="imagen">
        <input type="submit" value="enviar">
      </form>
</div>
<div class="errores" id="errorAgregar"></div>

<script src="/js/helpers.js"></script>